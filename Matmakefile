# using matmake2: https://github.com/laserskold/matmake2

core
  out = core
  command = [static]
  src =
    src/*.cpp
    src/codegen/llvmapi/*.cpp
    src/codegen/cpp/*.cpp
    src/modules/*.cpp
    src/code/*.cpp

parser_test
  out = parser_test
  src = test/parser_test.cpp
  in = @core
  command = [test]

lexer_test
  out = lexer_test
  src = test/lexer_test.cpp
  in = @core
  command = [test]

matcher_test
  out = matcher_test
  src = test/matcher_test.cpp
  in = @core
  command = [test]

main
  in =
    @core
  out =
    main
  src =
    src/main/*.cpp
  command = [exe]
  ldflags =
    `llvm-config --ldflags --libs core`

all
  in =
    @main
    @parser_test
    @lexer_test
    @matcher_test
  config =
    c++17
  !msvc:flags=
    -Wall
    -Wextra
    -Werror
    -Wno-missing-field-initializers
    -Wno-unused-parameter
  includes =
    include
    src
  sysincludes =
    /usr/include/llvm-14
    /usr/include/llvm-c-14
  copy =
    scripts
  eflags =
    -DVERIFY_EXTRA


